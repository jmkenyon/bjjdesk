generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  hashedPassword String?
  emailVerified  DateTime?
  name           String?
  role           UserRole
  belt           Belt?

  gymId String @db.ObjectId
  gym   Gym    @relation(fields: [gymId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  STUDENT
}

enum Belt {
  WHITE
  BLUE
  PURPLE
  BROWN
  BLACK
}

model Gym {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  qrCode    String?

  users      User[]
  documents  Document[]
  dropIn     DropIn?
  membership Membership[]
}

model Document {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fileUrl   String
  gymId     String   @db.ObjectId
  gym       Gym      @relation(fields: [gymId], references: [id])
  dropInId  String?  @db.ObjectId
  dropIn    DropIn?  @relation(fields: [dropInId], references: [id])
}

model DropIn {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  fee       Int?
  documents Document[]

  gymId String @unique @db.ObjectId
  gym   Gym    @relation(fields: [gymId], references: [id])
}

model Membership {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  price       Int
  title       String
  description String?

  gymId String @unique @db.ObjectId
  gym   Gym    @relation(fields: [gymId], references: [id])
}
