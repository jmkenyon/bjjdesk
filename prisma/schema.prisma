generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  hashedPassword String?
  emailVerified  DateTime?
  name           String?
  role           UserRole
  belt           Belt?

  gymId String @db.ObjectId
  gym   Gym    @relation(fields: [gymId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  STUDENT
}

enum Belt {
  WHITE
  BLUE
  PURPLE
  BROWN
  BLACK
}

model Gym {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  qrCode    String?

  users     User[]
  documents Document[]
}

model Document {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  fileUrl      String
  gymId     String   @db.ObjectId
  gym       Gym      @relation(fields: [gymId], references: [id])
}
